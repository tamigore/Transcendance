// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  email       String   @unique
  username    String?  @unique
  description String?
  hash        String
  hashedRt    String?
  socketId    String?
  loggedIn    Boolean  @default(false)
  @@map("users")
}

model Message {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())

  username String
  object   String?
  text     String
  channel  String

  @@map("Messages")
}

enum Role {
  USER
  ADMIN
}

enum Invite {
  SPEC
  PLAY
  FREND
}
