model Profile {
  id     Int     @default(autoincrement()) @id
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique
}

model Message {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())

  username String
  object   String
  text     String
  channel  String

  @@map("Messages")
}

enum Role {
  USER
  ADMIN
}

enum Invite {
  SPEC
  PLAY
  FREND
}
